
@{
    ViewBag.Title = "ThemMoiKhachHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form>

    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="inputMaKH">Mã Khách Hàng</label>
            <input type="text" class="form-control" id="inputMaKH" placeholder="Mã Khách Hàng">
        </div>
        <div class="form-group col-md-6">
            <label for="inputTenKH">Tên Khách hàng </label>
            <input type="text" class="form-control" id="inputTenKH" placeholder="Tên Khách hàng">
        </div>

        <div class="form-group col-md-6">
            <label for="inputEmail">Email </label>
            <input type="text" class="form-control" id="inputEmail" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
            <label for="inputSDT">Số điện thoại </label>
            <input type="text" class="form-control" id="inputSDT" placeholder="Số điện thoại ">
        </div>
        <div class="form-group col-12 ">
            <label for="inputDiaChi">Địa chỉ</label>
            <input type="text" class="form-control" id="inputDiaChi" placeholder="Địa chỉ ">
        </div>
        <div class="form-group col-md-6">
            <label for="inputTKKH">Tài khoản Khách Hàng</label>
            <input type="text" class="form-control" id="inputTKKH" placeholder="Tài khoản Khách Hàng">
        </div>
        <div class="form-group col-md-6">
            <label for="inputMKKH">Mật khẩu Khách Hàng</label>
            <input type="password" class="form-control" id="inputMKKH" placeholder="Mật khẩu Khách Hàng">
        </div>
    </div>
    
    
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Xác nhận thông tin
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
    <button type="submit" class="btn btn-primary">Sửa</button>

</form>

